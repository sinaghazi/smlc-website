  "description": "",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "del": "^8.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14"
  },
  "devDependencies": {
    "gulp": "^5.0.0",
    "gulp-rev": "^11.0.0",
    "gulp-rev-replace": "^0.4.4",
    "gulp-terser": "^2.1.0"
  }
}
