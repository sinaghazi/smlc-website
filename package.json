  "version": "1.0.0",
  "main": "index.html",
  "scripts": {
    "build:css": "NODE_ENV=production npx tailwindcss -i ./styles.css -o ./css/output.css --minify",
    "build:js": "gulp",
    "copy-data": "mkdir -p dist/data && cp -R data/* dist/data",
    "copy-images": "mkdir -p dist/img && cp -R img/* dist/img",
    "build": "npm run build:css && npm run build:js && npm run copy-data && npm run copy-images",
    "start": "echo 'Static site. No start command needed.'"
  },
